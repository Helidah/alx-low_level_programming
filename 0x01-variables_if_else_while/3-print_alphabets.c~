#include <stdio.h>
rints lowercase letters using only putchar
~ *
 *Description: a program that prints the alphabet in lowercase
 *Return: 0
*/
int main(void)
{
char c;

while (c = ‘a’; c <= 'z')
{
putchar(c);
c = c + 1;
}
while (c = ‘A’; c <= 'Z')
{
putchar(c);
c = c + 1;
}

putchar('\n');

return (0);
}
